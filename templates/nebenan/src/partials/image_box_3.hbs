<div data-ko-block="image_box_3" class="c-image_box c-image_box-size-3">
  {{#> card}}
    <table class="grid c-image_box-container">
      <tr>
        <td class="c-image_box-content">
          <img
            style="-ko-attr-alt: @firstImage.alt;"
            data-ko-editable="firstImage.src"
            src="{{local_image_url 'image_box_3_placeholder.png'}}"
            height="auto"
            width="100%"
            vspace="0"
            hspace="0"
            border="0"
          >
          <br />
          <div class="text" data-ko-editable="firstText" data-ko-display="firstShowText">Optional text</div>
        </td>

        <td class="c-image_box-space">&nbsp;</td>

        <td class="c-image_box-content">
          <img
            style="-ko-attr-alt: @secondImage.alt;"
            data-ko-editable="secondImage.src"
            src="{{local_image_url 'image_box_3_placeholder.png'}}"
            height="auto"
            width="100%"
            vspace="0"
            hspace="0"
            border="0"
          >
          <br />
          <div class="text" data-ko-editable="secondText" data-ko-display="secondShowText">Optional text</div>
        </td>

        <td class="c-image_box-space">&nbsp;</td>

        <td class="c-image_box-content">
          <img
            style="-ko-attr-alt: @thirdImage.alt;"
            data-ko-editable="thirdImage.src"
            src="{{local_image_url 'image_box_3_placeholder.png'}}"
            height="auto"
            width="100%"
            vspace="0"
            hspace="0"
            border="0"
          >
          <br />
          <div class="text" data-ko-editable="thirdText" data-ko-display="thirdShowText">Optional text</div>
        </td>
      </tr>
    </table>
  {{/card}}
</div>
