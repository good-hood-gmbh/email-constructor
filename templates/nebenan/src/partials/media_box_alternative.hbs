<div data-ko-block="media_box_alternative" class="c-media_box">
  {{#> card}}
    <table class="grid c-media_box-container">
      <tr>
        <td class="c-media_box-text">
          <div class="text" data-ko-editable="text">Text</div>
        </td>

        <td class="c-media_box-space">&nbsp;</td>

        <td class="c-media_box-image">
          <img
            style="-ko-attr-alt: @image.alt;"
            data-ko-editable="image.src"
            src="{{local_image_url 'media_box_placeholder.png'}}"
            height="auto"
            width="100%"
            vspace="0"
            hspace="0"
            border="0"
          >
        </td>
      </tr>
    </table>
  {{/card}}
</div>
