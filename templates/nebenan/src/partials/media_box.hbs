<div data-ko-block="media_box" class="c-media_box">
  {{#> card}}
    <table class="grid c-media_box-container">
      <tr>
        <td class="c-media_box-image">
          <img
            style="-ko-attr-alt: @image.alt; -ko-attr-height: @height"
            data-ko-editable="image.src"
            data-ko-placeholder-height="height"
            data-ko-placeholder-width="260"
            src=""
            height="180"
            width="260"
            vspace="0"
            hspace="0"
            border="0"
          >
        </td>

        <td class="c-media_box-space">&nbsp;</td>

        <td class="c-media_box-text">
          <div class="text" data-ko-editable="text">Text</div>
        </td>
      </tr>
    </table>
  {{/card}}
</div>
